/*4 - Faça um programa que calcule e mostre a área de um losango AREA = 
(DIAGONAL MAIOR * DIAGONAL MENOR) / 2*/

package application;

import java.util.Locale;
import java.util.Scanner;

public class Program {

	public static void main(String[] args) {

		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Qual o valor da diagonal maior?");
		double d1 = sc.nextDouble();
		System.out.println("Qual o valor da diagonal menor?");
		double d2 = sc.nextDouble();
		double area = (d1 * d2) / 2;
		System.out.printf("A área é de: %.2f%n", area);

		sc.close();
	}

}
