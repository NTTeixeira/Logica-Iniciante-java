package application;

import java.util.Locale;
import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Qual o ano de nascimento?");
		int anoNasc = sc.nextInt();
		System.out.print("Qual o ano atual?");
		int anoAtual = sc.nextInt();
		
		System.out.println("A idade da pessoa é igual a " + (anoAtual - anoNasc));
		System.out.println("A idade que ela terá em 2050 será " + (2050 - anoNasc));
		
		sc.close();
	}

}
